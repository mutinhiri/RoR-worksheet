<% if @article.errors.any? %>
<ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<div class="row">
    <div class="col-md-12">
    </div>
</div>

<%= form_for @article do |f| %>
    <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </p>
    <p> 
        <%= f.submit %>
    </p>

<% end %>

<%= link_to "back to articles listing", articles_path %>