<h1 align="center">Log in</h1>
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
    <div class="form-group>
        <div class="control-label col-sm-2"
         <%= f.label :email %>
        </div>
        <div class="col-sm-8">
            <%= f.text_field :title, class: "form-control", placeholder: 'Title of article', autofocus: true %>
        </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :description %>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
      </div>
    </div>
       
    <div class="form-group ">
        <div class="col-sm-10 col-sm-offset-2">
            <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
    </div>

<% end %>
<div class="col-xs-4 col-xs-offset-4">
   [ <%= link_to " Cancel request and back to articles listing", articles_path %> ]
</div>